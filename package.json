{
  "name": "statki",
  "version": "0.1.0",
  "dependencies": {
    "eslint": "^6.8.0",
    "parcel": "^1.12.4"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "parcel ./src/index.html",
    "build": "yarn clear && parcel build ./src/index.html",
    "clear": "rm -fr ./dist",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "cache"
  ]
}
